<template name="we-cropper">
  <view class="cropper-outter" 
        style="width:{{width + 30}}px;height:{{height + 30}}px;">
    <canvas
            class="cropper"
            disable-scroll="true"
            bindtouchstart="touchStart"
            bindtouchmove="touchMove"
            bindtouchend="touchEnd"
            style="width:{{width}}px;height:{{height}}px;"
            canvas-id="{{id}}">
    </canvas>
  </view>
</template>